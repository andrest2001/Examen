{{#each images}}
    <div class="card border-light mb-3" style="max-width: 18rem;">
        <div class="card-header">
            <h1>
                {{titulo}}
            </h1>
        </div>
        <div class="card-body">
            <img src="{{imagen}}" alt="" class="w-50">
            <p class="card-text">{{descripcion}}</p>
            <a href="/images/delete/{{{id}}}" class="btn btn-danger">Borrar</a>
            <a href="/images/edit/{{{id}}}" class="btn btn-info">Editar</a>
            <p>{{timeago created_at}}</p>
            <a href="/images/likes/{{{id}}}"><button class="btn"><i class="fa-solid fa-thumbs-up">{{likes}}</i></button></a>
            <a href="/images/dislikes/{{{id}}}"><button  class="btn"><i class="fa-solid fa-thumbs-down">{{dislikes}}</i></button></a>
        </div>
    </div>
{{/each}}